<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("page_title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path %></li>
        <% if user_signed_in? %>
          <%= link_to t("greeting", name: current_user.name), "#",
            {"class": "dropdown-toggle", "data-toggle": "dropdown"} %>
          <b class="caret"></b>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("logout"), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>